{
  "name": "front-end",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "eslint . --fix",
    "lint:strict": "eslint --max-warnings=0 src",
    "test": "jest",
    "test:c": "jest --coverage",
    "test:w": "jest --watch",
    "lint-staged": "lint-staged",
    "type-check": "tsc --project tsconfig.json --pretty --noEmit && echo ",
    "start:azure": "node server"
  },
  "dependencies": {
    "autoprefixer": "^10.4.16",
    "next": "14.0.4",
    "react": "^18",
    "react-dom": "^18",
    "tailwindcss": "^3.3.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^14.0.4",
    "@testing-library/jest-dom": "^6.1.6",
    "@testing-library/react": "^14.1.2",
    "@types/jest": "^29.5.11",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/uuid": "^9.0.7",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest-dom": "^5.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-testing-library": "^6.2.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "postcss": "^8",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "**/*.ts?(x)": ["prettier --write", "eslint --quiet --fix"],
    "**/*.(ts)?(x)": "npm run type-check",
    "./*.md": ["prettier --write"],
    "*.{json,html}": ["prettier --write --ignore-unknown"]
  }
}
